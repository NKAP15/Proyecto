<h2 class="text-center text-black">Sucursales</h2>
<div class="row">
  {{#if branches.length}}
    {{#each branches}}
      <div class="col-md-3 mt-4">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title d-flex justify-content-between align-items-center">
              {{name}} <a href="/branches/edit/{{_id}}"><i class="fas fa-edit"></i></a>
            </h4>
            <p>Ubicación: {{location}}</p>
            <form action="/branches/delete/{{_id}}?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
    <div class="text-right mb-3 mt-4">
      <a href="/branches/new" class="btn btn-info">Agregar otra sucursal</a>
    </div>
  {{else}}
    <div class="text-center">
      <p>Aún no hay sucursales registradas</p>
      <a href="/branches/new" class="btn btn-primary mt-3">Agregar Sucursal</a>
    </div>
  {{/if}}
</div>

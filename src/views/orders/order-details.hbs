<h1 class="text-center mb-4">Detalles de la Orden N° {{order.orderNumber}}</h1>
<div class="container">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h3>Información de la Orden</h3>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-6">
          <p><strong>Proveedor:</strong> {{order.provider.name}}</p>
        </div>
        <div class="col-md-6">
          <p><strong>Sucursal:</strong> {{order.branch.name}}</p>
        </div>
      </div>

      <h4 class="mt-4">Producto:</h4>
      <ul class="list-group">
        {{#each order.products}}
          <li class="list-group-item">
            <strong>{{this.product.name}}</strong> - {{this.quantity}} unidades
          </li>
        {{/each}}
      </ul>
      <div class="mt-4 text-center">
        <a href="/orders" class="btn btn-secondary">Regresar a todas las órdenes</a>
    </div>
  </div>
</div>

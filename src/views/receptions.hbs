<div class="container mt-5">
    <h1 class="text-center mb-4">Historial de Recepciones</h1>

    {{#if message}}
        <div class="alert alert-success">
            {{message}}
        </div>
    {{/if}}

    {{#if receptions.length}}
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Sucursal</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Fecha de Recepci√≥n</th>
                </tr>
            </thead>
            <tbody>
                {{#each receptions}}
                    <tr>
                        <td>{{this.branch.name}}</td>
                        <td>
                            {{#each this.productsReceived}}
                                <div>{{this.product.name}}</div>
                            {{/each}}
                        </td>
                        <td>
                            {{#each this.productsReceived}}
                                <div>{{this.quantity}} unidades</div>
                            {{/each}}
                        </td>
                        <td>
                            {{#each this.productsReceived}}
                                <div>{{formatDate ../receptionDate}}</div>
                            {{/each}}
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p class="text-center text-muted">No hay recepciones registradas</p>
    {{/if}}
</div>
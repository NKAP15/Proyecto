<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">Nuevo Proveedor</h3>
    </div>
    <div class="card-body text-right">
      <form action="/providers/new-provider" method="POST">
        <div class="mb-3">
          <label for="name">Nombre:</label>
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Nombre"
            required
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="phone">Telefono:</label>
          <input
            type="text"
            name="phone"
            class="form-control"
            placeholder="Telefono"
            required
          />
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Guardar
        </button>
      </form>
    </div>
  </div>
</div>